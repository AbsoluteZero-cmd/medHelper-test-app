<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"

        android:background="#F3F2F2"
        tools:src="@sample/jpg_placeholder" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_fullname"
        android:layout_below="@id/profile_image"
        android:text="Full Name: "
        android:textSize="18dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_email"
        android:text="Email: "
        android:textSize="18dp"
        android:layout_below="@+id/profile_fullname"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_phone"
        android:text="Phone: "
        android:textSize="18dp"
        android:layout_below="@+id/profile_email"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_date"
        android:text="Birth Date: "
        android:textSize="18dp"
        android:layout_below="@+id/profile_phone"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/trust_contacts_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_date"
        android:layout_alignBaseline="@+id/profile_edit_button"
        android:text="My trusted contacts"
        android:textColor="#2196F3"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trust_contacts_button"

        android:layout_marginTop="25dp"

        android:text="Sign Out"
        android:textColor="#2196F3"
        android:textSize="16dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/profile_edit_button"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:clickable="true"
        android:layout_marginBottom="60dp"
        app:srcCompat="@drawable/ic_edit" />

</RelativeLayout>
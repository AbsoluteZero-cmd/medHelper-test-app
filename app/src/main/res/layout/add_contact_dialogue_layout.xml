<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/add_contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Contact's name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/add_contact_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact's phone"
        android:inputType="phone"

        android:layout_below="@+id/add_contact_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_contact_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"

        android:layout_below="@+id/add_contact_phone"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:paddingHorizontal="60dp"/>

